<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/drawer_profile_picture" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/username"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/drawer_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="081234813812" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/drawer_laundry_number"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_oval_transparent"
                android:gravity="center"
                android:text="@string/zero"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/my_laundry"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <id.co.picklon.ui.view.MenuView
            android:id="@+id/drawer_my_address"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:menuImage="@drawable/drawer_address"
            app:menuText="My Address" />

        <id.co.picklon.ui.view.MenuView
            android:id="@+id/drawer_my_wallet"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:menuImage="@drawable/drawer_wallet"
            app:menuText="My Wallet" />

        <id.co.picklon.ui.view.MenuView
            android:id="@+id/drawer_news"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:menuImage="@drawable/drawer_news"
            app:menuRightImage="@drawable/ic_inbox_notification"
            app:menuText="News" />

        <id.co.picklon.ui.view.MenuView
            android:id="@+id/drawer_partner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:menuImage="@drawable/drawer_partner"
            app:menuText="Become Partner" />

        <id.co.picklon.ui.view.MenuView
            android:id="@+id/drawer_share"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:menuImage="@drawable/drawer_share"
            app:menuText="Share to Friends" />

        <id.co.picklon.ui.view.MenuView
            android:id="@+id/drawer_setting"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:menuImage="@drawable/drawer_setting"
            app:menuText="Setting" />

        <id.co.picklon.ui.view.MenuView
            android:id="@+id/drawer_logout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:menuImage="@drawable/drawer_logout"
            app:menuText="@string/logout" />

    </LinearLayout>

</LinearLayout>